<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys" 
					xmlns:local="clr-namespace:DXSample"
        xmlns:dxci="http://schemas.devexpress.com/winfx/2008/xaml/core/internal">
    <Style TargetType="{x:Type local:CustomControl1}">
        <Setter Property="Foreground" Value="{dxci:ThemeResource {dxt:PaletteBrushThemeKey  ResourceKey=Foreground}}" />
        <Setter Property="Background" Value="{dxci:ThemeResource ThemeKey={dxt:PaletteBrushThemeKey  ResourceKey=Window.Background}}"/>
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomControl1}">
                    <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBlock Text="{TemplateBinding Text}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
